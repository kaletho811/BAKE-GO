<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- FLECHA DE RETROCESO AÑADIDA -->
        <ImageView
            android:id="@+id/ic_back_recpass"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_flecha_atras"
            app:tint="@color/black"
            android:contentDescription="Botón de retroceso" />

        <TextView
            android:id="@+id/nom_App_rec_cont"
            android:layout_width="236dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:text="@string/bake_go"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/titulo_Rec_cont"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kavoon"
            android:text="@string/recuperaci_n_de_contrase_a"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/texto1_rec_cont"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kadwa"
            android:text="@string/olvidaste_tu_contrase_a"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_rec_cont"
            android:layout_width="274dp"
            android:layout_height="243dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/cerebro"
            android:contentDescription="Icono de cerebro" />

        <TextView
            android:id="@+id/texto2_rec_cont"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/kadwa"
            android:text="@string/ingresa_un_correo_electronico_para_enviarte_un_codigo_de_recuperaci_n"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/camp_corr_rec_cont"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bordes_redondos"
            android:ems="10"
            android:fontFamily="@font/kadwa"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_env_cod_rec_cont"
            android:layout_width="216dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/amarillo"
            android:fontFamily="@font/kadwa"
            android:text="@string/enviar_codigo"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>