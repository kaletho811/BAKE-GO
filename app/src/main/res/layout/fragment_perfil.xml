<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:fillViewport="true"
    tools:context=".Fragments.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/titulo_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/kavoon"
            android:text="@string/mi_perfil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/image_perf_mi_perf"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_perfil"
            android:background="@drawable/ic_perfil"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/nom_perf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kadwa"
                android:text="@string/nombre_perf"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ape_perf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kadwa"
                android:text="@string/apellido"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/corr_perf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kadwa"
                android:text="@string/correo_perf"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tel_perf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kadwa"
                android:text="@string/telefono_perf"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dire_perf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kadwa"
                android:text="@string/dirreccion"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btn_editar_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="@font/kadwa"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/editar_perfil"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="25dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="42dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_lapiz"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="8dp" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_pedidos_perf"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/amarillo"
            android:fontFamily="@font/kadwa"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/tus_pedidos"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="25dp" />

    </LinearLayout>
</ScrollView>